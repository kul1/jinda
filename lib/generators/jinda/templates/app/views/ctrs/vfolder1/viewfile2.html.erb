<%#
  doc = Doc.new :issue_on=&gt; Date.today, :process_at =&gt; Time.now
%>
<%#= fields_for doc do |f| %>
  <%#= f.label :rnum, "Reference number", class: "form-label" %>
  <%#= f.text_field :rnum, class: "form-control" %>
  &lt;!--div&gt;
    <%#= f.label :confidential, "Confidentiality" , class: "form-label" %>
    <%#= f.select :confidential, [[&#39;normal&#39;,0],[&#39;secret&#39;,1],[&#39;top secret&#39;,2]],{}, class: "form-select" %>
  &lt;/div--&gt;
  <%#= f.label :issue_on, "Dated", class: "form-label" %>
  <%#= f.date_field :issue_on, class: "form-control", "blackDays"=&gt;[0,6] %>
  <%#= f.label :summary, "Summary", class: "form-label" %>
  <%#= f.text_area :summary, class: "form-control", rows: 6 %>
  <%#= f.label :dscan, "Attached document", class: "form-label" %>
  <%#= f.file_field :dscan, class: "form-control" %>
<%# end %>
<%#= label_tag :hotel, "Ungroup field", class: "form-label" %>
<%#= text_field_tag :hotel, class: "form-control" %>
&lt;!--div&gt;
  <%#= label_tag :done1, "Logic field", class: "form-label" %>
  <%#= select_tag :done1, options_for_select([[&#39;Yes&#39;, &#39;y&#39;], [&#39;No&#39;, &#39;n&#39;]],&#39;y&#39;), class: "form-select" %>
&lt;/div--&gt;