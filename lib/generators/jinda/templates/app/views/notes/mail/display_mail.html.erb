&lt;%
  doc = Note.find_by :id =&gt; $xvars[&quot;select_note&quot;][&quot;id&quot;]
 %&gt;

&lt;% email = $xvars[&quot;select_note&quot;][&quot;email&quot;]  %&gt;
&lt;div class=&quot;mb-3&quot;&gt;
  &lt;label class=&quot;form-label&quot; for=&quot;email&quot;&gt;Mail to:&lt;/label&gt;
  &lt;b&gt;
    &lt;%=  email %&gt;
  &lt;/b&gt;  

&lt;/div&gt;
&lt;div class=&quot;mb-3&quot;&gt;
  &lt;%= fields_for doc do |f| %&gt;
    &lt;%= f.label :title, &quot;Subject&quot;, class: &quot;form-label&quot; %&gt;
    &lt;%= f.text_field :title, class: &quot;form-control&quot; %&gt;
    &lt;%= f.label :body, &quot;Content&quot;, class: &quot;form-label&quot; %&gt;
    &lt;%= f.text_area :body, class: &quot;form-control&quot;, rows: 6 %&gt;
  &lt;% end %&gt;
&lt;/div&gt;