<%
    article = Article.find_by :id=> $xvars["select_article"]["title"]
  %>
<div class ="module-table">
  <%= fields_for article do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <%= f.label :text, "Text" %>
    <%= f.text_field :text %>
    <%= f.label :text, "Keywords" %>
    <%= f.text_field :keywords %>
    <%= f.label :body, "Body Content" %>
    <%= f.text_area :body %>
  <% end %>
</div>
