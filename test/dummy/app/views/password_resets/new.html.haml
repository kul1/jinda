.container
	.signup-form
		.sign_in
			= form_tag password_resets_path, :method => :post, :id => 'password_reset_form' do
				.form-group.form-control
					= label_tag :email
					= text_field_tag :email, params[:email]
				%button.btn.btn-success.btn-block.actions{:type => "submit", :id => "reset_password_button", :name => "commit"}
					%i.fas.fa-sign-in-alt
					Reset Password

